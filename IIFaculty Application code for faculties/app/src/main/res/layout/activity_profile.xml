<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/piv1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        app:srcCompat="@drawable/logo" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="187dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="ID Number"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv1"
        android:layout_below="@+id/tv1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Name"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv1"
        android:layout_below="@+id/tv2"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Contact No"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv1"
        android:layout_below="@+id/tv3"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Email"/>
    <TextView
        android:id="@+id/tv5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv1"
        android:layout_below="@+id/tv4"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="DOB"/>
    <TextView
        android:id="@+id/tv6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv1"
        android:layout_below="@+id/tv5"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Address"/>


    <TextView
        android:id="@+id/ptvid"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignLeft="@id/tv1"
        android:layout_marginLeft="113dp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text=""/>
    <TextView
        android:id="@+id/ptvname"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv2"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignLeft="@+id/tv2"
        android:text=""
        android:layout_marginLeft="113dp" />
    <TextView
        android:id="@+id/ptvcontact"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv3"
        android:layout_alignStart="@+id/tv3"
        android:layout_marginLeft="113dp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text=""
        android:layout_alignLeft="@+id/tv3" />
    <TextView
        android:id="@+id/ptvmail"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv4"
        android:layout_alignStart="@+id/tv4"
        android:layout_marginLeft="113dp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text=""
        android:layout_alignLeft="@+id/tv4" />
    <TextView
        android:id="@+id/ptvdob"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv5"
        android:layout_alignStart="@+id/tv5"
        android:layout_marginLeft="113dp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text=""
        android:layout_alignLeft="@+id/tv5" />
    <TextView
        android:id="@+id/ptvadress"
        android:layout_width="264dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/tv6"
        android:layout_below="@id/ptvdob"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="113dp"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text=""
        android:layout_alignLeft="@+id/tv6" />
</RelativeLayout>
