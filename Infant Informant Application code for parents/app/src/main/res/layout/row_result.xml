<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_row"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Exam Name"
            android:id="@+id/examname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="SUBJECTS"
            android:id="@+id/tv1"
            android:layout_below="@id/examname"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="MARKS"
            android:id="@+id/tv2"
            android:layout_below="@id/examname"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="GRADES"
            android:id="@+id/tv3"
            android:layout_below="@id/examname"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="Maths"
            android:id="@+id/tv4"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="mathsmark"
            android:id="@+id/mathsmark"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="mathsgrade"
            android:id="@+id/mathsgrade"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="Gujarati"
            android:id="@+id/tv5"
            android:layout_below="@id/tv4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="gujaratimark"
            android:id="@+id/gujaratimark"
            android:layout_below="@id/tv4"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="gujaratigrade"
            android:id="@+id/gujaratigrade"
            android:layout_below="@id/tv4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="Total"
            android:id="@+id/tv6"
            android:layout_below="@id/tv5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="totalmark"
            android:id="@+id/totalmark"
            android:layout_below="@id/tv5"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="totalgrade"
            android:id="@+id/totalgrade"
            android:layout_below="@id/tv5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Rank in class:"
            android:id="@+id/tv7"
            android:layout_below="@id/tv6"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Rank"
            android:id="@+id/rank"
            android:layout_below="@id/tv6"
            android:layout_marginLeft="135dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Rank"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</LinearLayout>