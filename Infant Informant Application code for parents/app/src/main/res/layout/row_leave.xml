<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/layout_row"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Leave Start            :"
            android:id="@+id/tv4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Lstart"
            android:id="@+id/lstart"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="154dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Leave End              :"
            android:id="@+id/tv1"
            android:layout_below="@+id/tv4"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/lend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_below="@+id/lstart"
            android:text="Lend"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Leave Status         :"
            android:id="@+id/tv2"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/lstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_below="@+id/lend"
            android:text="Lstatus"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Reason"
            android:id="@+id/tv3"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/tv2"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

</LinearLayout>